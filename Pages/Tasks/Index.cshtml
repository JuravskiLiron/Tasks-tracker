@page
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Tasks_tracker.Pages.Tasks.Index

@{
    ViewData["Title"] = "Tasks";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Tasks</h2>
    <div>
        <a class="btn btn-primary" asp-page="Create">+ Add task</a>
        <a class="btn btn-outline-secondary" asp-page="Index" asp-route-ShowDone="@(Model.ShowDone ? false : true)">
            @(Model.ShowDone?"Hide done" : "Show done")
        </a>
    </div>
    <div class="list-group shadow-sm">
        @foreach (var t in Model.Items)
        {
            <div class="list-group-item">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <form method="post" asp-page-handler="Toggle" class="d-inline">
                            <input type="hidden" name="id" value="@t.Id"/>
                            <button class="btn btn-sm @(t.IsCompleted ? "btn-success" : "btn-outline-secondary")" type="submit">
                                @(t.IsCompleted ? "Done" : "Mark done")
                            </button>
                            
                        </form>
                        <strong class="ms-2">@t.Title</strong>
                        @if (!string.IsNullOrWhiteSpace(t.Description))
                        {
                            <span class="text-muted ms-2">@t.Description</span>
                        }
                        @if (t.DueAt != null)
                        {
                            <span class="badge text-bg-warning ms-2">due @t.DueAt.Value.ToLocalTime():g</span>
                        }
                        @if (t.EstimatedMinutes != null)
                        {
                            <span class="badge text-bg-info ms-2">~@t.EstimatedMinutes min</span>
                        }
                        @if (t.SpentMinutes != null)
                        {
                            <span class="badge text-bg-secondary ms-2">@t.SpentMinutes min spent</span>
                        }
                    </div>
                    <div>
                        <form method="post" asp-page-handler="QuickSpend" class="d-inline">
                            <input type="hidden" name="id" value="@t.Id"/>
                            <input type="hidden" name="minutes" value="15"/>
                            
                            <button class="btn btn-sm btn-outline-secondary">+15m</button>
                        </form>

                        <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@t.Id">Edit</a>
                        
                    </div>
                    
                    
                </div>
            </div>
        }
    </div>
</div>




























